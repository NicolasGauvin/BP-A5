<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="img-holder" style="">
    </div>
    <div id="canvasesHolder">
      <canvas id="canvasClickListener" width="1000" height="500" style="z-index: 1000;"></canvas>
    </div>
    <!-- holder for the story (should be hidden) -->
    <div id="story" style="display:none"></div>
    <form>
      <label for="character">Character</label>
      <select id="character">
        <option value="pirate">pirate</option>
        <option value="astronaute">astronaute</option>
      </select>
      <label for="context">Context</label>
      <select id="context">
        <option value="jungle">jungle</option>
        <option value="moyen-age">moyen-age</option>
      </select>
      <button type='button' onClick="setSettings()">Changer</button>
      <button type='button' onClick="startStory()">Commencer / Reset Histoire</button><br>
      <button type='button' onClick="setUpScene()">Suivante</button>
    </form>

  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
  <script src="./javascript/settings.js" charset="utf-8"></script>
  <script src="./javascript/storyParser.js" charset="utf-8"></script>
  <script src="./javascript/drawings.js" charset="utf-8"></script>
  <script src="./javascript/audio.js" charset="utf-8"></script>
  <script src="./javascript/main.js" charset="utf-8"></script>
<style>
  canvas{
    position:absolute;
    left:0px;
    top:0px;
  }
  form{
    position: absolute;
    top:500px;
  }
</style>
</html>
